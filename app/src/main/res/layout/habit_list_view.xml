<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintBottomOf="parent"
    tools:context=".Streak">

    <ImageView
        android:id="@+id/fire"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        app:layout_constrainedHeight="true"
        app:layout_constrainedWidth="true"
        app:layout_constraintLeft_toRightOf="@+id/days"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/fire"
        tools:layout_constraintWidth_max="35"
        tools:layout_editor_absoluteY="21dp" />

    <TextView
        android:id="@+id/habitTitle"
        android:layout_width="129dp"
        android:layout_height="33dp"
        android:text="TextView"
        app:layout_constraintHeight_default="wrap"
        app:layout_constraintWidth_default="wrap"
        app:layout_constraintRight_toRightOf="@id/days"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="31dp"
        tools:layout_editor_absoluteY="35dp" />

    <TextView
        android:id="@+id/days"
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:layout_margin="0dp"
        app:layout_constraintStart_toStartOf="@id/fire"
        app:layout_constraintTop_toTopOf="parent"
        android:text="TextView"
        app:layout_constraintHeight_default="wrap"
        app:layout_constraintWidth_default="wrap"
        tools:layout_editor_absoluteX="287dp"
        tools:layout_editor_absoluteY="34dp" />
</android.support.constraint.ConstraintLayout>